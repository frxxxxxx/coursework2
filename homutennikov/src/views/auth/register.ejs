<%- include("../partials/head", { title: "Регистрация" }) %>
<%- include("../partials/header") %>

<main class="container page page--narrow">
  <section class="panel">
    <h1 class="panel__title">Регистрация</h1>
    <form class="form" action="/auth/register" method="post">
      <label class="field">
        <span class="field__label">Имя</span>
        <input class="input" name="name" required />
      </label>
      <label class="field">
        <span class="field__label">Email</span>
        <input class="input" type="email" name="email" required />
      </label>
      <label class="field">
        <span class="field__label">Пароль</span>
        <input class="input" type="password" name="password" minlength="6" required />
      </label>
      <label class="field">
        <span class="field__label">О себе (необязательно)</span>
        <textarea class="textarea" name="bio" rows="3"></textarea>
      </label>
      <button class="btn btn--primary" type="submit">Создать аккаунт</button>
    </form>

    <div class="muted">
      Уже есть аккаунт? <a class="link" href="/auth/login">Вход</a>
    </div>
  </section>
</main>

<%- include("../partials/footer") %>
