<%- include("../partials/head", { title: "Кабинет" }) %>
<%- include("../partials/header") %>

<main class="container page">
  <div class="section__head">
    <h1 class="section__title">Кабинет</h1>
    <div class="section__actions">
      <a class="btn btn--primary" href="/dashboard/posts/new">Новый пост</a>
      <a class="btn btn--ghost" href="/dashboard/profile">Профиль</a>
    </div>
  </div>

  <div class="card">
    <div class="card__title">Мои посты</div>

    <% if (!posts.length) { %>
      <div class="empty">
        <div class="empty__title">Пока пусто</div>
        <div class="muted">Создай первый пост — это займёт пару минут.</div>
      </div>
    <% } %>

    <div class="tablewrap">
      <table class="table">
        <thead>
          <tr>
            <th>Заголовок</th>
            <th>Статус</th>
            <th>Дата</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach(p => { %>
            <tr>
              <td>
                <div class="tdtitle"><%= p.title %></div>
                <div class="muted small"><a class="link" href="/post/<%= p.slug %>" target="_blank">открыть</a></div>
              </td>
              <td><span class="badge <%= p.status==='published' ? 'badge--ok' : 'badge--warn' %>"><%= p.status %></span></td>
              <td class="muted"><%= new Date(p.created_at).toLocaleDateString("ru-RU") %></td>
              <td class="tdactions">
                <a class="btn btn--ghost" href="/dashboard/posts/<%= p.id %>/edit">Ред.</a>
                <form action="/dashboard/posts/<%= p.id %>?_method=DELETE" method="post" onsubmit="return confirm('Удалить пост?')">
                  <button class="btn btn--danger" type="submit">Удалить</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</main>

<%- include("../partials/footer") %>
